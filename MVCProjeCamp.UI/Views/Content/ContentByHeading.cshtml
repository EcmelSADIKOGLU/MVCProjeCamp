@model List<EntityLayer.Concrete.Content>
@{
    ViewBag.Title = "ContentByHeading";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<body class="hold-transition sidebar-mini">
    <br />
    <div class="wrapper">
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">

                        <div class="timeline">

                            <div class="time-label">
                                <span class="bg-success">@ViewBag.heading</span>
                            </div>
                            <br />
                            @foreach (var item in Model)
                            {
                                <div>
                                    <i class="fas fa-comment bg-yellow"></i>
                                    <div class="timeline-item">
                                        <h3 class="timeline-header">
                                            <a href="#">@item.Writer.WriterName @item.Writer.WriterSurname </a>
                                            <span class="float-right"> (@(((DateTime)item.ContentDate).ToString("dd-MMM-yyyy")))</span>
                                           
                                        </h3>
                                        
                                        <div class="timeline-body">
                                            @item.ContentText
                                        </div>
                                    </div>
                                </div>
                                <br />
                            }

                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</body>
