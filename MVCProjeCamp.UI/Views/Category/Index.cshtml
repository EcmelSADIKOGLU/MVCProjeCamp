@model List<EntityLayer.Concrete.Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<title>Kategori Listesi</title>
<br />
<div>
    <h2>Kategori Listesi</h2>
</div>
<br />

<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Kategori</th>
            <th>Açıklama</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Başlıklar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.CategoryID</th>
                <td>@item.CategoryName</td>
                <td>@item.CategoryDescription</td>
                <td><a href="/Category/DeleteCategory/@item.CategoryID" class="btn btn-danger">Sil</a></td>
                <td><a href="/Category/EditCategory/@item.CategoryID" class="btn btn-success">Güncelle</a></td>
                <td><a href="#" class="btn btn-info">Başlıklar</a></td>
                
            </tr>
        }
    </tbody>
</table>
<a href="/Category/AddCategory/" class="btn btn-primary">Yeni Kategori</a>

